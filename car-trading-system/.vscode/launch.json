    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "deploymentController.js",
            "program": "${workspaceFolder}/src/controller/deploymentController.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Server (Remote)",
            "program": "${workspaceFolder}/src/server.js",
            "args": ["config.remote.json"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Server (Local)",
            "program": "${workspaceFolder}/src/server.js",
            "args": ["config.local.json"]
        },
        {
            "type": "node",
            "request": "launch",
            "console": "externalTerminal",
            "name": "Deploy Contract (Remote)",
            "program": "${workspaceFolder}/src/deploy-contract.js",
            "args": ["config.remote.json"]
        },
        {
            "type": "node",
            "request": "launch",
            "console": "externalTerminal",
            "name": "Deploy Contract (Local)",
            "program": "${workspaceFolder}/src/deploy-contract.js",
            "args": ["config.local.json"]
        },
        {
            "type": "node",
            "request": "launch",
            "console": "externalTerminal",
            "name": "Test Method (Remote)",
            "program": "${workspaceFolder}/src/test-method.js",
            "args": ["config.remote.json"]
        },
        {
            "type": "node",
            "request": "launch",
            "console": "externalTerminal",
            "name": "Test Method (Local)",
            "program": "${workspaceFolder}/src/test-method.js",
            "args": ["config.local.json"]
        }
    ]
}