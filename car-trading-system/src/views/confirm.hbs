{{#extend "base" title='Car Trading System - Confirm Order'}} {{#content "main-content"}}
<h1>Confirm Order</h1>
<table class="table">
    <tr class="collapse">
        <td>Order Index</td>
        <td>{{order.index}}</td>
    </tr>
    <tr>
        <td>Name</td>
        <td>{{order.car.name}}</td>
    </tr>
    <tr>
        <td>Description</td>
        <td>{{order.car.description}}</td>
    </tr>
    <tr>
        <td>Price</td>
        <td>{{order.car.price}} ETH</td>
    </tr>
    <tr>
        <td>Buyer's Address</td>
        <td>{{order.buyerAddress}}</td>
    </tr>
    <tr>
        <td>Processing Status</td>
        <td>{{order.status}}</td>
    </tr>
</table>
<br/>
<form action="/confirm" method="POST">
    <input type="hidden" name="orderIndex" value="{{order.index}}"/>
    <p class="text-primary">Please present this page to buyer for confirmation.</p>
    <p>Enter buyer's private key to confirm the order.</p>
    <div class="form-group">
        <label for="privateKeyInput">Private Key</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">0x</span>
            </div>
            <input type="text" id="privateKeyInput" name="privateKey" required="required" maxlength="64" pattern="^[0-9A-Fa-f]{64}$" title="Private key must be a 256-bit hex string." class="form-control" placeholder="ABCDEF..." aria-label="Private Key" aria-describedby="basic-addon1">
        </div>
    </div>
    <button type="submit" class="btn btn-info">Confirm</button>
    <br/><br/>
    {{#if errorMessage}}
        <p class="text-danger">{{errorMessage}}</p>
    {{/if}}
</form>
{{/content}} {{/extend}}