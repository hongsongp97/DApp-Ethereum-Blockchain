{{#extend "base" title='Demo Voting - Error'}} {{#content "main-content"}}
<div class="search-container">
    <h3>List all Orders by address:</h3>
    <nav class="navbar navbar-light bg-light">
        <form class="form-inline" action="/search" method="POST">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">@</span>
                </div>
                <input type="text" name="address" class="form-control" placeholder="Address" aria-label="Address" aria-describedby="basic-addon1">
                <button class="btn btn-secondary ml-2">Search</button>
            </div>
        </form>
    </nav>
</div>
{{#unlessGt orders null}}
<div class="searching-result">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td>{{add @index 0}}</td>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.status}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/unlessGt}} {{/content}} {{/extend}}